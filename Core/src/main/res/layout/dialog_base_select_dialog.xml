<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x95"
        android:layout_marginRight="@dimen/x95"
        android:background="@drawable/sp_white_20"
        android:orientation="vertical">


    <TextView
            android:id="@+id/tv_title"
            style="@style/def_text.32.333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x40"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/x30"
            android:gravity="center"
            android:text="提示" />

    <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

    </LinearLayout>

    <View style="@style/line_vertical" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x86"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_cancel"
                style="@style/def_text.30.999"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消" />

        <View style="@style/line_horizontal" />

        <TextView
                android:id="@+id/tv_negative"
                style="@style/def_text.30.999"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="删除"
                android:visibility="gone" />

        <View
                android:id="@+id/v_negative"
                style="@style/line_horizontal"
                android:visibility="gone" />


        <TextView
                android:id="@+id/tv_determine"
                style="@style/def_text.30.999"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_000" />
    </LinearLayout>

</LinearLayout>