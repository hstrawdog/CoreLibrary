<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easy.example.com.easy.example.ui.customize.SemicircularActivity">


    <com.easy.example.ui.customize.widget.SemicircularView
        android:padding="@dimen/x20"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100" />


    <com.easy.example.ui.customize.widget.CircularProgressView
            app:progWidth="@dimen/x10"
            app:backWidth="@dimen/x10"
            app:backColor="#C8C8C8"
            app:progColor="#FE694E"
            app:progressNum="20"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"/>

</LinearLayout>