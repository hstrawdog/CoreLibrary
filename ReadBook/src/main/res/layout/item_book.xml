<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x1"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/x20"
        android:paddingVertical="@dimen/x15">


        <ImageView
            android:id="@+id/iv_book_img"
            android:layout_width="@dimen/x115"
            android:layout_height="@dimen/x160"
            android:scaleType="fitXY"
            android:src="@mipmap/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/x20">

            <TextView
                android:id="@+id/tv_book_name"
                style="@style/def_text.32.333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="abs123qpzndfhfgdd" />

            <TextView
                android:id="@+id/tv_book_desc"
                style="@style/def_text.24.666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingTop="@dimen/x10"
                android:text="booescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdescdesc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:id="@+id/tv_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="author"
                    android:textSize="@dimen/x24"></TextView>

                <TextView
                    android:id="@+id/tv_sources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="book desc"
                    android:textSize="@dimen/x24" />


                <TextView
                    android:id="@+id/tv_book_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="type"
                    android:textSize="@dimen/x24" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
