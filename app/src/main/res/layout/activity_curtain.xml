<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easy.example.ui.customize.CurtainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x100"
            android:src="@mipmap/ic_launcher" />

        <TextView
            style="@style/def_text.36.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_main_50"
            android:paddingHorizontal="@dimen/x100"
            android:paddingVertical="@dimen/x20"
            android:text="测试" />

        <TextView
            android:id="@+id/textView11"
            style="@style/def_text.36.white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x100"
            android:background="@drawable/sp_main_50"
            android:paddingHorizontal="@dimen/x100"
            android:paddingVertical="@dimen/x20"
            android:text="测试" />

    </LinearLayout>


    <com.easy.example.ui.customize.widget.GuideView
        android:visibility="gone"
        android:id="@+id/gv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
