<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView

        android:id="@+id/iv_book_img"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x120"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginBottom="@dimen/x20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_bookName"
        style="@style/def_text.30.333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="123" />

    <TextView
        android:id="@+id/tv_author"
        style="@style/def_text.28.666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:paddingTop="@dimen/x10"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookName"
        tools:text="123" />

    <TextView
        android:id="@+id/tv_cacheSize"
        style="@style/def_text.26.999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:paddingTop="@dimen/x10"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_author"
        tools:text="123" />


</androidx.constraintlayout.widget.ConstraintLayout>