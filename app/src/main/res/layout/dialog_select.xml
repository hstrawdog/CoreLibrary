<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/x560"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/sp_white_20"
        android:gravity="center"
        android:minHeight="@dimen/x300"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:text="标题"
            android:textColor="@color/color_333"
            android:textSize="@dimen/x34" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="@dimen/x20"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20">


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="你确认要删除么?"
                android:textColor="@color/color_333"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/x10"
                android:text="你确认要删除么?"
                android:textColor="@color/color_666"
                android:textSize="@dimen/x24"
                android:visibility="gone" />


        </LinearLayout>

        <View style="@style/line_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x85">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/def_text.30.333"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消" />

            <View style="@style/line_horizontal" />

            <TextView
                android:id="@+id/tv_define"
                style="@style/def_text.30.main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定" />
        </LinearLayout>
</LinearLayout>